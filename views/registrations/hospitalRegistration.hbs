<form action"/register/hospital" method="post" encType="multipart/form-data">
    <h2>Hospital Registration Form</h2>
    <br>
    <div>
        <label for="name">Hospital Name:</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
    </div>
    <div>
        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div class=col-md-3 p-5>
        <b><label for="Image">Hospital Image</label></b>
        <div class="card" style="width: 15rem; height: 15rem">
            <b>
                <p></p>
                <img src="" alt="np found" style="width:200px; height:200px"
                    id="imgView" class="pt-3 pb-3" >
                <br>
                <p></p>
                <br>
                <input type="File" name="img" class="form-control" onchange="viewImage(event) " required>
        </div>
        <br>
        <br>
        <br>
    </div>
    <button type="submit">Register</button>
</form>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]) //to access new image
    }
   
    $("#submit").click(function () {
        alert("The Item Inserted.");
    });
</script>