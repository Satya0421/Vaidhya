<style>
  /* Modal */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);

  }

  /* Modal Content */
  .modal-content {
    color: #000;
    display: flex;
    display: relative;
    background-color: #000;
    padding: 50px;
    border: 1px solid #888;
    width: 80%;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    max-width: 1200px;
    max-height: calc(100vh - 80px);
    border-radius: 20px; /* Adding corner radius */
  }

  /* Close Button */
  .mclose {
    cursor: pointer;
    position: absolute;
    color: #ffffff;
    top: 30%;
    right: 3%;
    font-size: 20px; /* Adjusting padding for circular close button */
  }
  .lwmclose {
    cursor: pointer;
    position: absolute;
    color: #ffffff;
    bottom: 20%;
    right: 3%;
    font-size: 15px; /* Adjusting padding for circular close button */
  }
  .close-bottom {
    position: absolute;
    color: #ffffff;
    bottom: 0%;
    right: 2%;
    cursor: pointer;
    font-weight: bold;
    font-size: 15px;
    margin-bottom: 10px;
     /* Adjusting padding for circular close button */
  }

  .close:hover, .close-bottom:hover,
  .close:focus {
    color: #ffffff;
    text-decoration: none;
    cursor: pointer;
  }
  .upper{
    background-color: #00D9A5; 
    height:60px; color:white; 
    border-radius:20px 20px 0px 0px;
    position: relative;
  }
  .lower{
    background-color: #00D9A5; 
    height:40px; color:white; 
    border-radius:0px 0px 20px 20px;
    position: relative;
  }
  .mmodal-text{
    position: absolute;
    color: #ffffff;
    top: 30%;
    left: 4%;
    font-size: 20px;
  }

</style>


<!-- Modal -->
<div id="customModal" class="modal" onclick="closeTermsModal()">
  <div class="modal-content" style="background-color: none; border: none; border-radius:20px; padding:0px 0px 0px 0px" onclick="event.stopPropagation()">
    <div class="upper">
      <span id="modalTitle" class="mmodal-text"></span>
      <span class="mclose" onclick="closeTermsModal()">&times;</span>
    </div>
    <div style="overflow: auto; background: #ffffff;" id="customContent" ></div>
    <div class="lower">
      <span class="lwmclose" onclick="closeTermsModal()">Close</span>
    </div>
  </div>
</div>


<script>
  
  function showPrivacyModal(event) {
    event.preventDefault();
    var url ='/privacy';
    fetch(url)
      .then(response => response.text())
      .then(data => {
        document.getElementById('customContent').innerHTML = data;
        document.getElementById('customContent').style.height = "600px";
        document.getElementById('modalTitle').textContent = 'Privacy';
        document.getElementById('customModal').style.display = 'block';
      })
      .catch(error => console.error('Error fetching terms:', error));
  }
function showAboutModal(event) {
    event.preventDefault();
    var url = '/about';
    fetch(url)
      .then(response => response.text())
      .then(data => {
        document.getElementById('customContent').innerHTML = data;
         document.getElementById('modalTitle').textContent = 'About Us';
        document.getElementById('customModal').style.display = 'block';
      })
      .catch(error => console.error('Error fetching terms:', error));
  }
  function showTermsModal(event) {
    event.preventDefault();
    var url = '/termsAndConditions';
    fetch(url)
      .then(response => response.text())
      .then(data => {
        document.getElementById('customContent').innerHTML = data;
        document.getElementById('customContent').style.height = "600px";
        document.getElementById('modalTitle').textContent = 'Terms & Condition';
        document.getElementById('customModal').style.display = 'block';
      })
      .catch(error => console.error('Error fetching terms:', error));
  }



  function closeTermsModal() {
    document.getElementById('customModal').style.display = 'none';
    document.getElementById('customContent').style.height = 'inherit';
  }
</script>

