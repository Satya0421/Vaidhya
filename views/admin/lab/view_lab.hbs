<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Lab Information</h2>
            <form action"/adminPanel/VidhyA789/view-doctor/{{this._id}}" method="post">
              
                <label for="id">Id</label>
                <input type="text" name="id" class="form-control" value="{{lab._id}} ">
                <label for="name">Full name</label>
                <input type="text" name="name" class="form-control" value="{{lab.Name}}">
                <label for="Phone">Phone</label>
                <input type="text" name="phone" class="form-control" value="{{lab.phone}}">
                <label for="username">Email</label>
                <input type="text" name="username" class="form-control" value="{{lab.email}} ">
                <label for="address">Address</label>
                <input type="text" name="address" class="form-control" value="{{lab.address}}">
                <label for="subendDate">SubScription End Date</label>
                <input type="text" name="subendDate" class="form-control" value="{{lab.subEnddate}}">
                <br>

            </form>
        </div>
        <div class=col-md-3 p-5>
            <b><label for="Image">Image</label></b>
            <div class="card" style="width: 15rem; height: 15rem">
                <img src="data:image/png;base64,{{lab.image}}" alt="np found" style="width:200px; height:auto"
                    id="imgView" class="pt-3 pb-3">
                <div>

                </div>
            </div>
            <br>
        </div>
        <form>
            <div>
                <label for="status">Active Status</label>
                <input type="text" name="status" class="form-control" value="{{lab.status}}">
                <br>
                <a href="/adminPanel/VidhyA789/view-lab/active/{{lab._id}}"
                    class="btn btn-primary">Active</a>
                <a href="/adminPanel/VidhyA789/view-lab/unSubscribe/{{lab._id}}"
                    class="btn btn-danger"
                    onclick="return confirm('are you want to UnSubscribe {{lab.Name}}')">UnSubscribe</a>
                <br>
                <br>
            </div>


        </form>
    </div>

</div>
</div>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]) //to access new image
    }
</script>