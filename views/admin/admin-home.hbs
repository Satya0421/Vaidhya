
    <section >
    <form method="post" encType="multipart/form-data" action='/adminPanel/VidhyA789/Add-superImage'>
    
    
        <div class="card" style="width: 15rem; height: 18rem" >
     <b>
                    <p></p>
                    <img src="" alt="np found" style="width:200px; height:200px" id="imgView" class="pt-3 pb-3">
